<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.th.dao.UserDAO">

    <select id="getByNamePwd" resultType="com.th.bean.User">
        select id, name, gender from t_user
        where name = #{name}
        and password = #{pwd}
    </select>

</mapper>